<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    tools:context=".view.TermDetails">
    <TextView
        android:id="@+id/term_details_start_date_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="@dimen/details_label_width"
        android:layout_height="wrap_content"
        android:text="Start Date"
        android:layout_margin="@dimen/text_margin"
        android:textSize="@dimen/text_size"/>
    <TextView
        android:id="@+id/term_details_start_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="Date"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/text_size"
        app:layout_constraintStart_toEndOf="@id/term_details_start_date_label"/>
    <TextView
        android:id="@+id/term_details_end_date_label"
        android:layout_width="@dimen/details_label_width"
        android:layout_height="wrap_content"
        android:text="End Date"
        android:layout_margin="@dimen/text_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/term_details_start_date_label"
        android:textSize="@dimen/text_size"/>
    <TextView
        android:id="@+id/term_details_end_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="Date"
        app:layout_constraintTop_toBottomOf="@id/term_details_start_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/term_details_end_date_label"
        android:textSize="@dimen/text_size"/>
    <TextView
        android:id="@+id/terms_details_courses_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="Courses"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/term_details_end_date_label"
        app:layout_constraintStart_toStartOf="parent" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/term_details_fab_courses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_black_24dp"
        android:layout_margin="@dimen/text_margin"
        app:layout_constraintStart_toEndOf="@id/terms_details_courses_label"
        app:layout_constraintTop_toBottomOf="@id/term_details_end_date"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/term_details_course_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/term_details_fab_courses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:scrollbars="vertical"/>
</androidx.constraintlayout.widget.ConstraintLayout>