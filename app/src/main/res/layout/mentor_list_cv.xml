<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="6dp">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mentor_list_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/mentor_list_cv_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="mini"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="18dp"
                android:src="@drawable/ic_edit_black_24dp"/>
            <ImageButton
                android:id="@+id/mentor_list_cv_details_image_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/mentor_list_cv_fab"
                android:contentDescription="Mentor Details"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@+id/mentor_list_cv_fab">
                <TextView
                    android:id="@+id/mentor_list_cv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textSize="32sp"/>
                <TextView
                    android:id="@+id/mentor_list_cv_email_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="jdoe@wgu.edu" />
            </LinearLayout>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>